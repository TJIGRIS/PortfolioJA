---
import img from "../../public/favicon.svg";

import DownloadIcon from "@assets/icons/DownloadIcon.astro";
---

<header
  class="flex flex-col sm:flex-row gap-6 items-center py-20 border-dotted border-b-[1px] border-gray-400"
>
  <picture
    class="w-48 h-48 min-w-48 min-h-48 rounded-full shadow-lg shadow-red-600 overflow-hidden border-[8px] border-white"
  >
    <img class="w-full h-full object-cover" src={img.src} alt="image" />
  </picture>

  <div class="flex flex-col items-center sm:items-start gap-2">
    <h1 class="text-3xl sm:text-5xl text-orange-400 font-bold">
      Johan Alvarez
    </h1>
    <p class="text-gray-400 text-lg font-semibold">
      Desarrollador Web font end
    </p>

    <div class="flex">
      <a
        class="flex items-center gap-2 bg-[#7aedbe] sm:bg-white rounded-lg px-5 py-1 font-semibold sm:hover:bg-[#7aedbe] transition-all duration-200"
        href=""
        title="Descargar CV"
        download
      >
        <DownloadIcon />
         CV
      </a>
    </div>
  </div>
</header>
