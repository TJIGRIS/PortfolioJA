---
interface Props {
  message: string;
  id?: string;
}

const { message, id } = Astro.props;
---

<button id={id} class="bg-white px-5 py-2 rounded-lg group relative">
  <slot />
  <span
    class="absolute text-xs w-max bg-orange-400 p-1 rounded-lg font-medium group-hover:opacity-100 opacity-0 -top-12 right-1/2 translate-x-1/2 translate-y-1/2 transition-all duration-300"
    >{message}</span
  >
</button>
